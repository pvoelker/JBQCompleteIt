<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:JBQCompleteIt"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JBQCompleteIt.BalloonButton">
    <Frame
        x:DataType="local:BalloonButton"
        Margin="2"
        Padding="4"
        BackgroundColor="{Binding Path=BackgroundColor, Source={RelativeSource AncestorType={x:Type local:BalloonButton}}}"
        CornerRadius="10">
        <Label
            FontSize="{Binding Path=FontSize, Source={RelativeSource AncestorType={x:Type local:BalloonButton}}}"
            Text="{Binding Path=Text, Source={RelativeSource AncestorType={x:Type local:BalloonButton}}, Mode=OneWay}"
            Margin="5,0,5,0"
            TextColor="{Binding Path=TextColor, Source={RelativeSource AncestorType={x:Type local:BalloonButton}}}"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"/>
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Path=Command, Source={RelativeSource AncestorType={x:Type local:BalloonButton}}}" />
        </Frame.GestureRecognizers>
    </Frame>
</ContentView>
